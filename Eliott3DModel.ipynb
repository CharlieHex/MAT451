# brute force: iterate through possibility space (r)
fp = []

def find_fixed_points(r):
    for x in range(r):
        for y in range(r):
            for z in range(r):
                if ((f(x,y,z) == 0) and (g(x,y,z) == 0) and (h(x,y,z) == 0)):
                    fp.append((x,y,z))
                    print('The system has a fixed point in %s,%s,%s' % (x,y,z))
    return fp(x,y,z)

find_fixed_points(10)

